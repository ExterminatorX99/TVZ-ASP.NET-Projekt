@using Vjezba.Model
@model List<Vjezba.Model.Client>

@{
	ViewData["Title"] = "Home Page";
}

<style>
	.tab-pane { padding: 20px; }
</style>

<h1>Popis klijenata</h1>
<div style="margin-bottom: 10px; margin-top: 20px;">
	<partial name="_ClientFilter" model="new ClientFilterModel()"/>
</div>

<table style="margin-top: 20px;" class="table table-sm">
	<thead>
	<tr>
		<th>Client</th>
		<th>Address</th>
		<th>Email</th>
		<th>City</th>
		<th></th>
	</tr>
	</thead>
	<tbody>
	@foreach (Client item in Model) {
		<tr>
			<td>
				<a asp-action="Details" asp-route-id="@item.ID">@item.FullName</a>
			</td>
			<td>@item.Address</td>
			<td>@item.Email</td>
			<td>@item.City?.Name</td>
			<td class="text-center">
				<a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.ID">Uredi</a>
			</td>
		</tr>
	}
	</tbody>
</table>