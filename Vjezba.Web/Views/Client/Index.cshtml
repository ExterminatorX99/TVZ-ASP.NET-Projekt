@using Vjezba.Web.Mock
@model List<Vjezba.Web.Mock.Client>

@{
	ViewData["Title"] = "Client Page";
}

<nav aria-label="breadcrumb">
	<ol class="breadcrumb">
		<li class="breadcrumb-item active" aria-current="page">Popis klijenata</li>
	</ol>
</nav>

<form class="form-inline">
	<div class="form-group">
		<input class="form-control mb-2 mr-sm-2" type="text" name="query" placeholder="Client name"/>
	</div>
	<button type="submit" class="btn btn-primary mb-2">Submit</button>
</form>

<table class="table">
	<thead>
		<tr>
			<th scope="col">Client</th>
			<th scope="col">Address</th>
			<th scope="col">Email</th>
			<th scope="col">City</th>
		</tr>
	</thead>
	<tbody>
		@foreach (Client client in Model)
		{
			<tr>
				<td><a asp-controller="Client" asp-action="Details" asp-route-id="@client.ID">@client.FullName</a></td>
				<td>@client.Address</td>
				<td>@client.Email</td>
				<td>@client.City?.Name</td>
			</tr>
		}
	</tbody>
</table>