@model Vjezba.Model.Client
@{
	ViewData["Title"] = "Create";
}

<nav aria-label="breadcrumb">
	<ol class="breadcrumb">
		<li class="breadcrumb-item">
			<a asp-action="Index">Popis klijenata</a>
		</li>
		<li class="breadcrumb-item active">Dodaj klijenta</li>
	</ol>
</nav>

<form asp-action="Create" method="post">
	<div class="form-group">
		<div class="form-group">
			<label asp-for="FirstName">Ime:</label>
			<input asp-for="FirstName" class="form-control"/>
		</div>
		<div class="form-group">
			<label asp-for="LastName">Prezime:</label>
			<input asp-for="LastName" class="form-control"/>
		</div>
		<div class="form-group">
			<label asp-for="Email">E-mail:</label>
			<input asp-for="Email" class="form-control"/>
		</div>
		<div class="form-group">
			<label asp-for="Gender">Spol:</label>
			<input asp-for="Gender" class="form-control"/>
		</div>
		<div class="form-group">
			<label asp-for="Address">Adresa:</label>
			<input asp-for="Address" class="form-control"/>
		</div>
		<div class="form-group">
			<label asp-for="PhoneNumber">Broj telefona:</label>
			<input asp-for="PhoneNumber" class="form-control"/>
		</div>
		<div class="form-group">
			<label asp-for="City.Name">Grad:</label>
			<input asp-for="City.Name" class="form-control"/>
		</div>
		<button type="submit" class="btn btn-primary">Dodaj</button>
	</div>
</form>