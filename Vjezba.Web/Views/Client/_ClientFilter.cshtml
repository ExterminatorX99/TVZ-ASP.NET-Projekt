@using Vjezba.Web.Models

@model ClientFilterModel

<form action="@Url.Action("AdvancedSearch")" method="post" class="form-inline">
	<div class="form-group">
		<input type="text" class="form-control" name="@Html.NameFor(p => p.FullName)" placeholder="Pretraga po imenu">
	</div>
	<div class="form-group">
		@Html.EditorFor(p => p.Address)
	</div>
	<div class="form-group">
		@Html.TextBoxFor(p => p.Email, htmlAttributes: new { @class = "form-control", placeholder = "Pretraga po email adresi" })
	</div>
	<div class="form-group">
		<input asp-for="City" class="form-control" type="text" placeholder="Pretraga po gradu" />
	</div>
	<button type="submit" class="btn btn-default">Submit</button>
</form>