@model ClientFilterModel

<form action="@Url.Action("AdvancedSearch")" method="post" class="form-inline">
	<div class="form-group">
		@Html.EditorFor(c => c.FullName, new {
			htmlAttributes = new {
				@class = "form-control",
				placeholder = "Pretraga po imenu"
			}
		})
	</div>
	<div class="form-group">
		<input type="text" class="form-control" name="@Html.NameFor(c => c.Address)" placeholder="Pretraga po adresi">
	</div>
	<div class="form-group">
		<input asp-for="Email" class="form-control" placeholder="Pretraga po e-mailu">
	</div>
	<div class="form-group">
		@Html.TextBoxFor(c => c.City, new {
			@class = "form-control",
			placeholder = "Pretraga po gradu"
		})
	</div>
	<button type="submit" class="btn btn-primary">Submit</button>
</form>