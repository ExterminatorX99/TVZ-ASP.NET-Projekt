@{
	ViewData["Title"] = "Contact page";
}
<h1>@ViewData["Title"]</h1>

<p>Podaci proslijeđeni iz controller-a: @ViewData["Message"]</p>

<form action="/Home/SubmitQuery" method="post">
	<table>
		<tr>
			<td>
				<label for="imePrezime">Ime i Prezime</label>
			</td>
			<td>
				<input type="text" name="imePrezime" id="imePrezime" />
			</td>
		</tr>
		<tr>
			<td>
				<label for="email">E-mail</label>
			</td>
			<td>
				<input type="text" name="email" id="email" />
			</td>
		</tr>
		<tr>
			<td>
				<label for="poruka">Poruka</label>
			</td>
			<td>
				<textarea name="poruka" id="poruka"></textarea>
			</td>
		</tr>
		<tr>
			<td>
				<label for="tip">Tip poruke</label>
			</td>
			<td>
				<select name="tip" id="tip">
					<option value="Pohvala">Pohvala</option>
					<option value="Upit">Upit</option>
					<option value="Prijedlog">Poslovni Prijedlog</option>
					<option value="Žalba">Žalba</option>
				</select>
			</td>
		</tr>
		<tr>
			<td>
				<label for="newsletter">Želite li primati naš newsletter?</label>
			</td>
			<td>
				<input type="checkbox" name="newsletter" id="newsletter" />
			</td>
		</tr>

		<tr>
			<td colspan="2">
				<input type="submit" value="Pošalji"/>
			</td>
		</tr>
	</table>
</form>